  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "types": ["@cloudflare/workers-types", "bun"]
  },
  "include": ["src/**/*.ts"]
}
